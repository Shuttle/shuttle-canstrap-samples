<h1>cs-button-remove</h1>
<div>
    Custom confirmation:
    <cs-checkbox checked:bind="customConfirmationChecked" checked-class="fa-toggle-on"
                 unchecked-class="fa-toggle-off"/>
</div>
<cs-button-remove click:from="@remove" disabled:from="removing" />
{{#if removing}}
    <div class="alert alert-info mt-2" role="alert">
        (removing)
    </div>
{{/if}}
